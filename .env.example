# Portainer Documentation Service Configuration

# === Service Configuration ===
# Timezone for scheduling and logging (e.g., America/New_York, Europe/London, UTC)
PORTAINER_TIMEZONE=UTC

# Daily documentation generation time (24-hour format HH:MM)
PORTAINER_SCHEDULE_TIME=02:00

# Output directory for documentation files
PORTAINER_OUTPUT_DIR=/output

# Output format (markdown or json)
PORTAINER_OUTPUT_FORMAT=markdown

# Enable verbose logging (true/false)
PORTAINER_VERBOSE=false

# === Multiple Portainer Hosts Configuration ===
# JSON array of host configurations
# Each host must have: url, name, and either token OR username+password
PORTAINER_HOSTS=[
  {
    "name": "production",
    "url": "https://portainer-prod.example.com",
    "token": "ptr_your-api-token-here"
  },
  {
    "name": "staging", 
    "url": "https://portainer-staging.example.com",
    "username": "admin",
    "password": "your-password-here"
  }
]

# === Legacy Single-Host Configuration (for backward compatibility) ===
# These will be converted to multi-host format if PORTAINER_HOSTS is not set
PORTAINER_URL=https://your-portainer.com
PORTAINER_USERNAME=admin
PORTAINER_PASSWORD=your-password
# PORTAINER_TOKEN=your-api-token  # Alternative to username/password

# === Feature Flags (true/false) ===
PORTAINER_INCLUDE_COMPOSE_FILES=true
PORTAINER_INCLUDE_TEMPLATES=true
PORTAINER_INCLUDE_REGISTRIES=true
PORTAINER_INCLUDE_AUTH_SETTINGS=true
PORTAINER_INCLUDE_LICENSE_INFO=true
PORTAINER_INCLUDE_USERS_TEAMS=true